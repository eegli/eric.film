{
  "name": "eric.film",
  "author": "Eric Egli (https://github.com/eegli)",
  "version": "1.0.0",
  "license": "MIT",
  "homepage": "https://eric.film",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prod": "next build && next start",
    "format": "prettier --write **/*.{js,jsx,ts,tsx}",
    "lint": "eslint src --ext .js --ext .jsx --ext .ts --ext .tsx",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:improve": "jest --watchAll --coverage",
    "fix:everything": "rm -rf node_modules .yarnclean && yarn"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "@sentry/browser": "^5.19.0",
    "@sentry/node": "^5.19.0",
    "@sentry/webpack-plugin": "^1.12.0",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-http": "^1.5.17",
    "disqus-react": "^1.0.9",
    "fontfaceobserver": "^2.1.0",
    "graphql": "^15.1.0",
    "graphql-tag": "^2.10.3",
    "next": "^9.4.4",
    "nprogress": "^0.2.0",
    "raw-loader": "^4.0.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-icons": "^3.10.0",
    "react-markdown": "^4.3.1",
    "react-progressive-graceful-image": "^0.6.11",
    "react-smooth-collapse": "^2.1.0",
    "react-syntax-highlighter": "^12.2.1",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.4",
    "@testing-library/react": "^10.4.7",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.22",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.43",
    "@types/react-syntax-highlighter": "^11.0.4",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "babel-plugin-graphql-tag": "^2.5.0",
    "babel-plugin-styled-components": "^1.10.7",
    "eslint": "^7.4.0",
    "eslint-plugin-react": "^7.20.3",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-styled-components": "^7.0.2",
    "jsdom": "^16.3.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "prettier-plugin-organize-imports": "^1.1.1",
    "ts-jest": "^26.1.2",
    "typescript": "^3.9.6"
  }
