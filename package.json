{
  "name": "eric.film",
  "author": "Eric Egli (https://github.com/eegli)",
  "version": "1.0.0",
  "license": "MIT",
  "homepage": "https://eric.film",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "prebuild": "jest && next build",
    "prod": "next build && next start",
    "format": "prettier --write **/*.{js,jsx,ts,tsx}",
    "lint": "eslint src --ext .js --ext .jsx --ext .ts --ext .tsx",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:improve": "jest --watch --coverage",
    "fix:everything": "rm -rf node_modules .yarnclean && yarn",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@sentry/browser": "^5.26.0",
    "@sentry/node": "^5.26.0",
    "@sentry/webpack-plugin": "^1.13.0",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "disqus-react": "^1.0.10",
    "graphql": "^15.3.0",
    "next": "^10.0.3",
    "nprogress": "^0.2.0",
    "raw-loader": "^4.0.2",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-icons": "^4.1.0",
    "react-markdown": "^5.0.0",
    "react-progressive-graceful-image": "^0.6.12",
    "react-smooth-collapse": "^2.1.0",
    "react-syntax-highlighter": "^15.2.1",
    "styled-components": "^5.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.19.4",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@graphql-codegen/typescript-react-apollo": "^2.0.7",
    "@types/enzyme": "^3.10.7",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.11.11",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.53",
    "@types/react-syntax-highlighter": "^13.5.0",
    "@types/styled-components": "^5.1.4",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "babel-plugin-graphql-tag": "^3.1.0",
    "babel-plugin-styled-components": "^1.11.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.11.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "jest-styled-components": "^7.0.3",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2",
    "prettier-plugin-organize-imports": "^1.1.1",
    "typescript": "^4.0.3",
    "typescript-styled-plugin": "^0.15.0"
  }
}
